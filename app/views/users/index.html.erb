

<div class="container maincontents">
  <h3 class="title">ユーザー一覧</h3>
  <div class ="row">
    <div class="col-xs-12">
      <table class="table table-striped">
      	<thead>
      	 <tr>
      	 	<th>user id</th>
      	 	<th>ユーザー名</th>
      	 	<th>メールアドレス</th>
          <th></th>
      	 </tr>
      	</thead>
      	<% @users.each do |user| %>
      	<tbody>
      	 <tr>
      	   <th><%= link_to user.id,user_path(user.id) %></th>
           <th><%= user.name %></th>
      	   <th><%= user.email %></th>
           <th><%= link_to "削除", user_path(user.id), method: :delete, "data-confirm" => "本当に削除しますか？？" %></th>

      	 </tr>
      	</tbody>
      	<% end %>
      </table>
    </div>
  </div>
</div>

 <div style="text-align:center">
      <%= paginate @users %>
</div>
